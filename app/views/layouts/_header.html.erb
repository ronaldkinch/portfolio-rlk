<header class="fixed">
  <div class="row">
    <div class="small-12 medium-4 large-6 columns namelogo">
      <h1>Ronald Kinch</h1>
    </div>
    <div class="small-12 medium-8 large-6 columns">
      <div class="nav-bar">
        <ul class="button-group">
        <li><%= link_to 'Home', root_path, class: :button %></li>
        <li><%= link_to 'About', root_path({anchor: 'about'}), class: :button %></li>
        <li><a href="#work" class="button">Work</a></li>
        <li><a href="#contact" class="button">Contact</a></li>
        </ul>
      </div>
    </div>
  </div>

  <% flash.each do |key, value| %>
    <div class="alert-box round <%= flash_class(key) %>">
      <%= value %>
    </div>
  <% end %>
</header>
